# Example configuration for fedibuzz_to_sharkey
# Copy to .env and fill in your values.

SHARKEY_BASE=https://YOUR.DOMAIN
SHARKEY_TOKEN=YOUR_ADMIN_API_TOKEN_HERE

# Drive & fetch
AD_FOLDER=Advertisements  # storage folder; created automatically if missing
STATUS_SCAN_LIMIT=60
HTTP_TIMEOUT=25
USER_AGENT=BubbleAdUploader/1.3 (+https://your-domain)

# Dedupe behaviour: reuse | rename
DEDUP_MODE=reuse

# Ad creator
AD_DEFAULT_PRIORITY=50
AD_DURATION_DAYS=7
AD_TITLE_PREFIX=[TagAd] #
AD_PLACE=horizontal-big

# Popularity → ratio controls
AD_RATIO_MIN=0.40
AD_RATIO_MAX=1.00
AD_RATIO_SCALE=100

# Multi-variant ads: show multiple images for popular hashtags
AD_MAX_VARIANTS=3       # max ad slots per tag (images uploaded & ads created)
AD_VARIANT_THRESHOLD=3  # min unique images required before enabling variants

# Weekday "always on" ads — one var per day, comma-separated hashtags
# WEEKDAY_HASHTAGS_MONDAY=motivationmonday,mondaymood,mondaymorning
# WEEKDAY_HASHTAGS_TUESDAY=transformationtuesday
# WEEKDAY_HASHTAGS_WEDNESDAY=wisdomwednesday,humpday
# WEEKDAY_HASHTAGS_THURSDAY=throwbackthursday,tbt
# WEEKDAY_HASHTAGS_FRIDAY=followfriday,ff,friyay
# WEEKDAY_HASHTAGS_SATURDAY=caturday
# WEEKDAY_HASHTAGS_SUNDAY=selfcaresunday

# WEEKDAY_TITLE_PREFIX=[WeekdayAd] #
# WEEKDAY_AD_RATIO=50              # fixed ratio for weekday ads (not trending-based)
# WEEKDAY_AD_PRIORITY=50           # default priority for weekday ads
