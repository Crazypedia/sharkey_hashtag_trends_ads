# Example configuration for fedibuzz_to_sharkey
# Copy to .env and fill in your values.

SHARKEY_BASE=https://YOUR.DOMAIN
SHARKEY_TOKEN=YOUR_ADMIN_API_TOKEN_HERE

# Drive & fetch
AD_FOLDER=Advertisements  # storage folder; created automatically if missing
STATUS_SCAN_LIMIT=60
HTTP_TIMEOUT=25
USER_AGENT=SeedAdUploader/1.3 (+https://your-domain)

# Dedupe behaviour: reuse | rename
DEDUP_MODE=reuse

# Ad creator
AD_DEFAULT_PRIORITY=50
AD_DURATION_DAYS=7
AD_TITLE_PREFIX=[TagAd] #
AD_PLACE=horizontal-big

# Popularity â†’ ratio controls
AD_RATIO_MIN=0.40
AD_RATIO_MAX=1.00
AD_RATIO_SCALE=100
